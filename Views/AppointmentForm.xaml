<Window x:Class="SchedulingDesktopWGU.Views.AppointmentForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Manage Appointments" Height="450" Width="500">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>

        <!-- Appointment List -->
        <DataGrid x:Name="AppointmentGrid" Grid.Row="0" AutoGenerateColumns="False" SelectionChanged="AppointmentGrid_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding appointmentId}" Width="50"/>
                <DataGridTextColumn Header="Customer" Binding="{Binding customerName}" Width="120"/>
                <DataGridTextColumn Header="Type" Binding="{Binding type}" Width="100"/>
                <DataGridTextColumn Header="Start" Binding="{Binding start}" Width="100"/>
                <DataGridTextColumn Header="End" Binding="{Binding end}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Input fields -->
        <StackPanel Grid.Row="1" Margin="0,10,0,0">
            <StackPanel Margin="0,5">
                <TextBlock Text="Customer:"/>
                <ComboBox x:Name="cbCustomers" Width="200" />
            </StackPanel>

            <StackPanel Margin="0,5">
                <TextBlock Text="Type of Appointment:"/>
                <TextBox x:Name="txtType" Width="200" />
            </StackPanel>

            <StackPanel Margin="0,5">
                <TextBlock Text="Date and Time:"/>
                <StackPanel Orientation="Horizontal">
                    <DatePicker x:Name="dpDate"/>
                    <TextBox x:Name="txtStart" Width="100" Margin="10,0,0,0" Text="09:00"/>
                    <TextBox x:Name="txtEnd" Width="100" Margin="10,0,0,0" Text="10:00"/>
                </StackPanel>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                <Button Content="Add" Width="75" Click="Add_Click" Margin="5"/>
                <Button Content="Update" Width="75" Click="Update_Click" Margin="5"/>
                <Button Content="Delete" Width="75" Click="Delete_Click" Margin="5"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
